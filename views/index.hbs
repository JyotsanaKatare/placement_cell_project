  <div class="container mt-5">
    <h1>Welcome to Placement Cell</h1>
  </div>

<div class="container mt-5 shadow -p-5" style="width: 35%">
    <h2>Sign Up Page</h2>
     <form action="/data" method "POST">
      <div class="mb-3">
        <label for="username">Username:</label>
        <input type="text" class="form-control" aria-describedby="usernameHelp" id="username" name="name" required autocomplete="off">
      </div>
       <div class="mb-3">
        <label for="email">Email:</label>
        <input type="email" class="form-control" aria-describedby="emailHelp" id="email" name="email" required autocomplete="off">
      </div>
      <div class="mb-3">
        <label for="password">Password:</label>
        <input type="password" class="form-control"  id="password" name="password" required autocomplete="off">
      </div>
       <div class="mb-3">
        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" class="form-control" id="confirmPassword"  name="confirmPassword" required autocomplete="off" >
      </div>
      <div class="mb-3">
        <label for="phone">Phone:</label>
        <input type="tel" class="form-control" id="phone" aria-describedby="phoneHelp" name="phone" required autocomplete="off">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <footer class="bg-dark text-white text-center py-3 mt-5">
